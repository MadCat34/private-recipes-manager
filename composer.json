{
    "name": "madcat34/private-recipes-manager",
    "type": "project",
    "license": "AGPL-3.0-only",
    "description": "Fork of symfony-tools/recipes-checker, to manage recipes for private bundles",
    "authors": [
        {
            "name": "Fabien Potencier",
            "email": "fabien@symfony.com",
            "role": "Original author"
        },
        {
            "name": "Nicolas Grekas",
            "email": "p@tchwork.com",
            "role": "Original author"
        },
        {
            "name": "MadCat34",
            "email": "MadCat34@users.noreply.github.com",
            "role": "Fork maintainer"
        }
    ],
    "homepage": "https://github.com/MadCat34/private-recipes-manager",
    "support": {
        "source": "https://github.com/MadCat34/private-recipes-manager",
        "issues": "https://github.com/MadCat34/private-recipes-manager/issues"
    },
    "require": {
        "php": ">=8",
        "ext-ctype": "*",
        "ext-intl": "*",
        "ext-mbstring": "*",
        "symfony/console": "^5.4",
        "symfony/filesystem": "^5.4",
        "symfony/http-client": "^5.4",
        "symfony/process": "^5.4",
        "symfony/runtime": "^5.4",
        "symfony/yaml": "^5.4"
    },
    "require-dev": {
        "symfony/var-dumper": "^5.3",
        "arokettu/composer-license-manager": "^1.2"
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-intl-grapheme": "*",
        "symfony/polyfill-intl-normalizer": "*",
        "symfony/polyfill-mbstring": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php80": "*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "config": {
        "allow-plugins": {
            "symfony/runtime": true,
            "arokettu/composer-license-manager": true
        }
    },
    "extra": {
        "arokettu/composer-license-manager": {
            "licenses": {
                "allowed": [
                    "AGPL-3.0-only",
                    "AGPL-3.0-or-later",
                    "GPL-3.0-only",
                    "GPL-3.0-or-later",
                    "LGPL-3.0-only",
                    "LGPL-3.0-or-later",
                    "MIT",
                    "BSD-2-Clause",
                    "BSD-3-Clause",
                    "Apache-2.0",
                    "ISC",
                    "Unlicense",
                    "CC0-1.0",
                    "MPL-2.0"
                ],
                "forbidden": [
                    "GPL-2.0-only",
                    "LGPL-2.1-only",
                    "EPL-1.0",
                    "EPL-2.0",
                    "CDDL-1.0",
                    "MPL-1.1",
                    "OSL-3.0",
                    "NPL-1.1",
                    "JSON",
                    "SSPL-1.0",
                    "Proprietary",
                    "Commercial",
                    "Non-free",
                    "NOASSERTION",
                    "UNKNOWN"
                ],
                "allow-empty": false
            },
            "enforced": true
        }
    }
}
